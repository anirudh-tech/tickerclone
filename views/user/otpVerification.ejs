<%-include('../layouts/header')%>
<section class="vh-100 d-flex align-items-center"  style="background: linear-gradient(to right, rgb(255, 184, 184), rgb(229, 255, 251));">
<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card shadow" style="width: 30rem;">
      <form action="/otpVerification" method="post">
        <% if (messages.success) { %>
          <div class="alert alert-success">
              <%= messages.success %>
          </div>
      <% }else if (messages.error){ %>
        <div class="alert alert-danger">
          <%= messages.error %>
      </div>
      <%}%>

        <div class="card-body d-flex flex-column">
            <h5 class="card-title icons text-center">Verify Your Email Address</h5>
            <p class="card-subtitle mb-2 text-body-secondary icons text-center" style="font-size: small;">Enter the OTP received in the registered Email Address</p>
            <div class="form-check-label mt-3">
              <div class="verify">
                <input
                      name="otp"
                      type="number"
                      class="form-control mt-2 "
                      id="number"
                      placeholder="Enter your OTP"
                    />
            </div>
            <div class="mt-3">
                <button
                      id = "emailVerification"
                      type="submit"
                      class="btn text-center text-white sign-in1 btn-lg"
                      style="
                        background-color: #fa8232;
                        width: -webkit-fill-available;
                        border: none;"
                    >
                      Sign up
                    </button>
            </div>   
              <div class="d-flex "> <p class="text-danger">OTP will be expired in : <p id="timer">02:00</p></p></div>
              <div id="resendOtp" style="display: none;"><p class="mt-3">Didn't receive the email? <a href="/passwordResendOtp" class="card-link">Resend OTP</a></p></div>
          </div>
            </div>
            </div>         
        </div>
      </form>
    </div>
</div>
</section>
<%- include('../layouts/footer') %>